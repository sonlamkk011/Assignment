<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <!--    food-->
    <servlet>
        <servlet-name>CreateFoodServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.food.CreateFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateFoodServlet</servlet-name>
        <url-pattern>/food/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateFoodServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.food.UpdateFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateFoodServlet</servlet-name>
        <url-pattern>/food/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteFoodServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.food.DeleteFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFoodServlet</servlet-name>
        <url-pattern>/food/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListFoodServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.food.ListFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListFoodServlet</servlet-name>
        <url-pattern>/food/list</url-pattern>
    </servlet-mapping>
    <!--    end of food-->


    <!--    category-->
    <servlet>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.category.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <url-pattern>/category/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.category.DeleteCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <url-pattern>/category/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListCategoryServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.category.ListCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategoryServlet</servlet-name>
        <url-pattern>/category/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.category.UpdateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <url-pattern>/category/update</url-pattern>
    </servlet-mapping>

    <!--    end of category-->
</web-app>